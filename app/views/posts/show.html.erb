<%= @post.markdown_title %>

<div class="row">
  <div class="col-md-8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
       submitted <%= time_ago_in_words(@post.created_at) %> ago by
       <%= @post.user.name %>
    </small>
    <p><%= @post.markdown_body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post, @summary), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>



<div class="row">
  <%= form_for [@post.topic, @post, @post.comments.new] do |f| %>
    Body: <%= f.text_field :body %>
    <% f.submit %>
  <% end %>
</div>
